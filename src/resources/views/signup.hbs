<body>
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div
                        class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                        <h3 class="breadcrumb-title">Sign up</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li class="active" aria-current="page">Sign up</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Customer Login Section :::... -->
    <div class="customer_login">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <!--register area start-->
                <div class="col-lg-8 col-md-8">
                    <div class="account_form register">
                        <h3>Register</h3>
                        <form action="#">
                            <div class="d-flex justify-content-between">
                                <div class="default-form-box col-lg-6 mb-20">
                                    <label>First Name <span>*</span></label>
                                    <input type="text">
                                </div>
                                <div class="default-form-box col-lg-5 mb-20">
                                    <label>Last Name <span>*</span></label>
                                    <input type="text">
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="default-form-box mb-20">
                                    <label>Gender</label>
                                    <div class="input-radio p-2">
                                        <span class="custom-radio"><input type="radio" value="1"
                                                name="id_gender" checked="checked">Male</span>
                                        <span class="custom-radio"><input type="radio" value="1"
                                                name="id_gender">Female</span>
                                        <span class="custom-radio"><input type="radio" value="1"
                                                name="id_gender">Other</span>                                                
                                    </div>
                                </div>
                                <div class="default-form-box mb-20 col-7">
                                    <div class="d-flex">
                                        <label>Birthdate</label>
                                        <span class="example ml-2">(E.g.: 05/31/1970)</span>
                                    </div>
                                    <input type="date" name="birthday">
                                </div>
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Email address <span>*</span></label>
                                <input type="text">
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Username <span>*</span></label>
                                <input type="text">
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Passwords <span>*</span></label>
                                <input type="password">
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Repeat passwords <span>*</span></label>
                                <input type="password">
                            </div>
                            <div class="default-form-box col-12 mb-20">
                                <label for="country">Country <span>*</span></label>
                                <select class="country_option nice-select wide" name="country" id="country">
                                    <option value="2">Vietnam</option>
                                    <option value="3">Algeria</option>
                                    <option value="4">Afghanistan</option>
                                    <option value="5">Ghana</option>
                                    <option value="6">Albania</option>
                                    <option value="7">Bahrain</option>
                                    <option value="8">Colombia</option>
                                    <option value="9">Dominican Republic</option>
                                </select>
                            </div>
                            <div class="default-form-box col-12 mt-70 mb-20">
                                <label>Street address <span>*</span></label>
                                <div class="d-flex justify-content-between">
                                    <input class="mr-10" placeholder="House number and street name" type="text">
                                    <input placeholder="Apartment, suite, unit etc. (optional)" type="text">
                                </div>
                            </div>
                            <div class="default-form-box col-12 mb-20">
                                <label>Town / City <span>*</span></label>
                                <input type="text">
                            </div>
                            <div class="default-form-box col-lg-12 mb-20">
                                <label>Phone<span>*</span></label>
                                <input type="text">
                            </div>
                            <div class="login_submit d-flex flex-column align-items-center">
                                <button type="submit">Register</button>
                                <a href="/login" class="mt-3">Already have an account? Login!</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!--register area end-->
            </div>
        </div>
    </div> <!-- ...:::: End Customer Login Section :::... -->
</body>