    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div
                        class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                        <h3 class="breadcrumb-title">My Account</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li class="active" aria-current="page">My Account</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Account Dashboard Section:::... -->
    <div class="account_dashboard">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li><a href="#account-details" data-toggle="tab" class="nav-link active">Account details</a>
                            </li>
                            <li> <a href="#orders" data-toggle="tab" class="nav-link">Orders</a></li>
                            <li><a href="#edit-profile" data-toggle="tab" class="nav-link">Edit profiles</a></li>
                            <li><a href="login" class="nav-link">logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade" id="edit-profile">
                            <h3>Profile editor</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form action="#">
                                            <div class="d-flex mb-5 justify-content-center align-items-center">
                                                <img src="/images/avatars/person-0.png" alt="Guest" width="80"
                                                    class="rounded-circle mr-4">
                                                <div class="default-form-box d-flex flex-column align-items-center">
                                                    <label class="mb-1">Upload your new avatar</label>
                                                    <input class="form-control form-control-sm" id="formFileSm"
                                                    type="file" />
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <div class="default-form-box col-lg-6 mb-20">
                                                    <label>First Name <span>*</span></label>
                                                    <input type="text">
                                                </div>
                                                <div class="default-form-box col-lg-5 mb-20">
                                                    <label>Last Name <span>*</span></label>
                                                    <input type="text">
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <div class="default-form-box mb-20">
                                                    <label>Gender</label>
                                                    <div class="input-radio p-2">
                                                        <span class="custom-radio"><input type="radio" value="1"
                                                                name="id_gender">Male</span>
                                                        <span class="custom-radio"><input type="radio" value="1"
                                                                name="id_gender">Female</span>
                                                        <span class="custom-radio"><input type="radio" value="1"
                                                                name="id_gender">Other</span>
                                                    </div>
                                                </div>
                                                <div class="default-form-box mb-20 col-7">
                                                    <div class="d-flex">
                                                        <label>Birthdate</label>
                                                        <span class="example ml-2">(E.g.: 05/31/1970)</span>
                                                    </div>
                                                    <input type="date" name="birthday">
                                                </div>
                                            </div>
                                            <div class="default-form-box mb-20">
                                                <label>Email address <span>*</span></label>
                                                <input type="text">
                                            </div>
                                            <div class="default-form-box col-12 mb-20">
                                                <label for="country">Country <span>*</span></label>
                                                <select class="country_option nice-select wide" name="country"
                                                    id="country">
                                                    <option value="2">Bangladesh</option>
                                                    <option value="3">Algeria</option>
                                                    <option value="4">Afghanistan</option>
                                                    <option value="5">Ghana</option>
                                                    <option value="6">Albania</option>
                                                    <option value="7">Bahrain</option>
                                                    <option value="8">Colombia</option>
                                                    <option value="9">Dominican Republic</option>
                                                </select>
                                            </div>
                                            <div class="default-form-box col-12 mt-70 mb-20">
                                                <label>Street address <span>*</span></label>
                                                <div class="d-flex justify-content-between">
                                                    <input class="mr-10" placeholder="House number and street name"
                                                        type="text">
                                                    <input placeholder="Apartment, suite, unit etc. (optional)"
                                                        type="text">
                                                </div>
                                            </div>
                                            <div class="default-form-box col-12 mb-20">
                                                <label>Town / City <span>*</span></label>
                                                <input type="text">
                                            </div>
                                            <div class="default-form-box col-lg-12 mb-20">
                                                <label>Phone<span>*</span></label>
                                                <input type="text">
                                            </div>
                                            <div
                                                class="save_button primary_btn default_button d-flex justify-content-center">
                                                <button type="submit">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="orders">
                            <h4>Orders</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>May 10, 2018</td>
                                            <td><span class="success">Completed</span></td>
                                            <td>$25.00 for 1 item </td>
                                            <td><a href="#" data-toggle="modal" data-target="#modalViewOrder"
                                                    class="view">view</a></td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>May 10, 2018</td>
                                            <td>Processing</td>
                                            <td>$17.00 for 1 item </td>
                                            <td><a href="#" data-toggle="modal" data-target="#modalViewOrder"
                                                    class="view">view</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane show active" id="account-details">
                            <div class="d-flex mb-5 justify-content-center">
                                <img src="/images/avatars/person-0.png" alt="Guest" width="70"
                                    class="rounded-circle mr-2">
                            </div>
                            <div class="d-flex flex-wrap justify-content-between">
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Full name</label>
                                    Leonard Da Vinci
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Gender</label>
                                    Male
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Birthdate</label>
                                    15/04/1452
                                </div>
                            </div>
                            <div class="d-flex flex-wrap justify-content-between">
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Phone</label>
                                    0123456789
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Email address</label>
                                    davinci@gmail.com
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Street address</label>
                                    Vinci, Tuscan, Arno, Italia
                                </div>
                            </div>
                            <p class="font-italic">Your addresses will be used on the checkout page by default.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Account Dashboard Section:::... -->
</body>